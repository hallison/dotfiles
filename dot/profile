: +++ profile

# Set Ruby development options
export GEM_HOME=${HOME}/.gem/ruby/1.8
export GEM_PATH=${HOME}/.gem/ruby/1.8
export RUBYOPT="-w -rubygems"
export RUBYENV=development

# Set my applications on path
export PATH=./bin:${HOME}/.local/bin:${GEM_HOME}/bin:/var/lib/gems/1.8/bin:${PATH}

# Set my shortcuts
export CDPATH=${HOME}/Code:.:${HOME}:${HOME}/Games

# Set 'ls' command options
export LS_OPTIONS='--color=auto'

# Set my favorite editor
export EDITOR=vim
export VISUAL=gvim

# Set 'readline' command parameters for binds
export INPUTRC=${HOME}/.inputrc

# Check if use Bash
test ${BASH} && login=yes source ~/.bashrc
test -s $HOME/.rvm/scripts/rvm && source $HOME/.rvm/scripts/rvm

: --- profile

# vim: filetype=sh
