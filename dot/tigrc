#
# Key configuration
#
# Syntax: bind <keymap> <key> <request>

bind main    w scroll-line-up
bind main    s scroll-line-down

bind diff    a previous
bind diff    d next
bind diff    b move-first-line

bind generic g view-next

#
# Color configuration
#
# Syntax: color <line> <fgcolor> <bgcolor> [<attribute>]

# Diff colors
color "header"         yellow    default
color "index"          blue      default
color "chunk"          magenta   default
color "add"            green     default
color "del"            red       default
color "oldmode"        yellow    default
color "newmode"        yellow    default
color "copy from"      yellow    default
color "copy to"        yellow    default
color "rename from"    yellow    default
color "rename to"      yellow    default
color "similarity"     yellow    default
color "dissimilarity"  yellow    default
color "tree"           blue      default

# Pretty print commit header
color "Author:"           cyan      default
color "Commit:"           magenta   default
color "Merge:"            blue      default
color "Date:"             yellow    default
color "Adate:"            yellow    default
color "Cdate:"            yellow    default

# Raw commit header
color commit              green     default
color parent              blue      default
color tree                blue      default
color author              cyan      default
color committer           magenta   default

# Misc
color "signed-off by"             yellow    default

# UI colors
color default             default   default
color cursor              black     white     bold
color status              white     default
color title-blur          white     blue
color title-focus         white     blue      bold

color date           default   default
color author         default   default
color main-tag            green     default            # Tag with signature
color main-local-tag      red       default            # Tag without signature
color main-ref            yellow    default   normal
color main-head           green     default   normal
color main-commit         default   default
color main-tracked        green     default   bold
color main-remote         cyan     default

# Tree view
color "tree.head"           default   blue
color mode                default   default
color "tree.dir"            blue      default
color "tree.file"           default   default

