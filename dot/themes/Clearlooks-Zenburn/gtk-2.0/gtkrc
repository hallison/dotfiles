style "clearlooks-scrollbar"
{
	bg[NORMAL]	= shade (1.20, @bg_color) # Color for non-colored scrollbars.
	bg[PRELIGHT]	= shade (1.23, @bg_color) # Color for scrollbar prelight? (probably obsolete)
	bg[ACTIVE]	= shade (0.85, @bg_color) # Color for pressed scrollbar buttons.
	fg[ACTIVE]	= lighter (@selected_bg_color) # Color for pressed scrollbar arrows.
	bg[SELECTED]	= shade (0.88, @text_color) # You can change the color of colorized scrollbars here.
	engine "clearlooks"
	{
		#colorize_scrollbar	= TRUE # Uncommenting this gives you colorful scrollbars.
		radius	= 0.0  # Roundness of scrollbars.
		hint	= "scrollbar"
	}
}

style "clearlooks-hscrollbar" = "clearlooks-scrollbar"
{
	engine "clearlooks"
	{
		hint	= "hscrollbar"
	}
}

style "clearlooks-vscrollbar" = "clearlooks-scrollbar"
{
	engine "clearlooks"
	{
		hint	= "vscrollbar"
	}
}

