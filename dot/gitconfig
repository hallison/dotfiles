[color]
  branch      = auto
  diff        = auto
  interactive = auto
  status      = auto
[core]
  #excludesfile = /home/hallison/.gitignore
  editor = vim
[diff]
  tool = vimdiff
[alias]
  #ls = log HEAD --stat --no-merges
  ci = commit
  co = checkout
  dc = diff --cached  # diff staged changes
  di = diff           # basic diff
  lB = branch -vr     # list remote branches
  lb = branch -v      # list local branches
  ld = log -p         # log listing all differences
  ls = ls-tree HEAD:
  st = status
  up = remote update
  # who did this
  wdt = shortlog -se --
  msg = commit --allow-empty
  io = "!sh -c 'curl -is http://git.io -F url=\"$1\" | grep Location | cut -d\\  -f2' -"
[branch]
  autosetupmerge = true
[apply]
  whitespace = nowarn
[gc]
  auto = 1
[push]
	default = matching

