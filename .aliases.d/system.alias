# Listing
alias ls='ls $LS_OPTIONS'
alias ll='ls -l'
alias lg='ls -lg'
alias lh='ls -lh'
alias la='ls -la'
alias lt-'ls -og --time-style=\'+%Y-%m-%d %H:%M:%S\''

# Directories
alias ..='cd ..'
alias ...='cd ../..'

# Seach
alias fn='find -name'
alias ft='find -type'
alias fp='find -perm'
alias fw='grep -lir'
alias fs='ps -aux | grep -i'

# Tools
alias ce='vim'  # Use bind CRTL-x-e
alias ve='gvim'

# Ruby
alias irb='irb --readline -r irb/completion -rubygems'
alias rbw='ruby -W'
